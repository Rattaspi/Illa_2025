@import url("./CommonWindow.uss");

.section-title {
    font-size: 14px;
    -unity-font-style: bold;
    background-color: rgb(44, 44, 44);
    margin: 3px 0 0 0;
    padding: 0 6px;
}

.section-content {
    padding: 4px;
}

.section-content > VisualElement {
    flex-direction: row;
    justify-content: space-between;
}

#selectPlayFileButton {
    height: 18px;
    width: 24px;
    padding: 0;
}

#playTimeLabel {
    font-size: 11px;
    width: 50px;
    margin-top: 8px;
}

#playProgressBar {
    height: 15px;
    margin: 0 6px 0 6px;
}

#senderConfigFields Label {
    width: 150px;
    min-width: 150px;
}

/* ===== Send Destination ===== */

#sendDestinationsPanel {
    padding: 4px;
}

