SendDestinationList {
    flex-direction: column;
    margin-top: 4px;
}

SendDestinationItem {
    margin-top : 4px;
    padding: 5px;
    border-width:1px;
}

.SendDestinationItemIcon {
    width : 14px;
    height : 14px;
    margin: 2px 3px 3px 3px;
}
